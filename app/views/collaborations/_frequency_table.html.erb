<dl class="dl-horizontal">
  <dt>Importe</dt>
  <dd><%= number_to_euro @collaboration.amount %></dd>
  <dt>Frecuencia de pago</dt>
  <dd>cada <%= @collaboration.frequency * 30 %> días</dd>
  <dt>Método de pago</dt>
  <dd><%= @collaboration.payment_type_name %></dd>
  <% if @collaboration.is_bank? %>
    <dt>Cuenta bancaria</dt>
    <dd>
    <% if @collaboration.is_bank_national? %>
      <%= @collaboration.pretty_ccc_full %>
    <% end %>
    <% if @collaboration.is_bank_international? %>
      IBAN: <%= @collaboration.iban_account %> <br>
      BIC: <%= @collaboration.iban_bic %>
    <% end %>
    </dd>
  <% end %>
  <% if @collaboration.for_autonomy_cc %>
  <dt>Financiación territorial</dt>
  <dd>Consejo autonómico<%if @collaboration.for_town_cc%> / Consejo municipal<%end%></dd>
  <% end %>

</dl>

<% if @collaboration.frequency > 0 %>
<table class="table-collaborations">
  <caption class="invisible">Colaboraciones</caption>
  <thead>
    <th>Fecha estimada de pago</th>
    <th>Importe</th>
  </thead>
  <tbody>
  <% @orders.each do |orders| %>
    <tr>
      <td> <%= l(orders[-1].payable_at, format: :date) %><% if orders[-1].was_returned? %> (devuelta)<%elsif orders[-1].is_paid?%> (pagada el <%=l(orders[-1].payed_at, format: :date)%>)<% end %></td>
      <td> <%= number_to_euro orders[-1].amount %> </td>
    </tr>
  <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th>Total</th>
      <th><%= number_to_euro(@orders.map {|o| o[-1].amount} .sum) %></th>
    </tr>
  </tfoot>
</table>
<% end %>

