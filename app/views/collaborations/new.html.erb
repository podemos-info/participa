<div class="content-content cols">
  <div class="row">
    <div class="col-b-4a12">

      <%= content_tag(:h2, t("podemos.collaboration.title")) %>

      <%= render partial: 'steps', locals: {step: 1} %>

      <%= info_box do %>
          <p><%= t("podemos.collaboration.p1") %></p>
      <% end %>

      <%= errors_in_form @collaboration %>

      <%= semantic_form_for @collaboration, url: create_collaboration_path, html: {method: :post} do |f| %>
          <fieldset>
            <legend class="invisible">Nueva colaboración</legend>

            <div class="inputlabel-box">
              <% if @collaboration.errors.include?(:amount) %>
                  <%= field_notice_box %>
              <% end %>
              <%= f.input :amount,
                          required: true,
                          as: :select,
                          collection: Collaboration::AMOUNTS,
                          input_html: {required: true, class: 'js-collaboration-amount'} %>
            </div>

            <div class="inputlabel-box">
              <% if @collaboration.errors.include?(:frequency) %>
                  <%= field_notice_box %>
              <% end %>
              <%= f.input :frequency,
                          required: true,
                          as: :select,
                          collection: Collaboration::FREQUENCIES,
                          input_html: {required: true, class: 'js-collaboration-frequency'} %>
            </div>

            <div class="inputlabel-box">
              <% if @collaboration.errors.include?(:payment_type) %>
                  <%= field_notice_box %>
              <% end %>
              <%= f.input :payment_type,
                          required: true,
                          as: :select,
                          collection: Collaboration::TYPES,
                          input_html: {required: true, class: 'js-collaboration-type'} %>
            </div>

            <div class="js-collaboration-type-form-2">
              <div class="inputlabel-box">
                <% if @collaboration.errors.include?(:ccc_entity) %>
                    <%= field_notice_box %>
                <% end %>
                <%= f.input :ccc_entity,
                            hint: "Las cuatro primeras cifras de tu cuenta",
                            input_html: { maxlength: 4,
                                          hint: "Las cuatro primeras cifras de tu cuenta"} %>
              </div>

              <div class="inputlabel-box">
                <% if @collaboration.errors.include?(:ccc_office) %>
                    <%= field_notice_box %>
                <% end %>
                <%= f.input :ccc_office,
                            hint: "Las cuatro cifras a partir de la quinta posición",
                            input_html: { maxlength: 4 } %>
              </div>

              <div class="inputlabel-box">
                <% if @collaboration.errors.include?(:ccc_dc) %>
                    <%= field_notice_box %>
                <% end %>

                <%= f.input :ccc_dc,
                            hint: "Las cifras novena y décima",
                            input_html: { maxlength: 2} %>
              </div>

              <div class="inputlabel-box">
                 <% if @collaboration.errors.include?(:ccc_account) %>
                    <%= field_notice_box %>
                 <% end %>

                 <%= f.input :ccc_account,
                             hint: "Las últimas diez cifras",
                             input_html: { maxlength: 10} %>
              </div>
            </div>

            <div class="js-collaboration-type-form-3">
              <div class="inputlabel-box">
                <% if @collaboration.errors.include? :iban_account %>
                    <%= field_notice_box %>
                <% end %>

                <%= f.input :iban_account %>
              </div>
              <div class="inputlabel-box">
                <% if @collaboration.errors.include? :iban_bic %>
                    <%= field_notice_box %>
                <% end %>

                <%= f.input :iban_bic %>
              </div>
            </div>

            <div class="inputlabel-box js-collaboration-alert invisible">
              <span class="no-label">Aportación económica</span>
              <span class="no-input"><span id="js-collaboration-alert-amount"></span> €</span>
            </div>

          </fieldset>

          <fieldset class="with-tos">

            <legend><span>Consentimiento</span></legend>

            <div class="inputlabel-box">
              <span class="no-label"><%= t('podemos.collaboration.terms_of_service.title') %></span>
              <span class="no-input">
                <div class="tos">
                  <p> <%= t('podemos.collaboration.terms_of_service.p1_title') %> </p>

                  <p> <%= t('podemos.collaboration.terms_of_service.p1') %> </p>

                  <p> <%= t('podemos.collaboration.terms_of_service.p2_title') %> </p>

                  <p> <%= t('podemos.collaboration.terms_of_service.p2') %> </p>

                  <p> <%= t('podemos.collaboration.terms_of_service.p3_title') %> </p>

                  <p> <%= t('podemos.collaboration.terms_of_service.p3') %> </p>
                </div>
              </span>
            </div>

            <div class="inputlabel-box">
              <% if @collaboration.errors.include?(:terms_of_service) %>
                  <%= field_notice_box %>
              <% end %>

              <%= f.label :terms_of_service %>
              <div class="input-box">
                <%= f.check_box :terms_of_service, checked: true, class: 'checkbox' %>
                <p class="text-xl">Acepto las condiciones generales.</p>
              </div>
            </div>

            <div class="inputlabel-box">
              <% if @collaboration.errors.include?(:minimal_year_old) %>
                  <%= field_notice_box %>
              <% end %>
              <%= f.label :minimal_year_old %>
              <div class="input-box">
                <%= f.check_box :minimal_year_old, checked: true, class: 'checkbox' %>
                <p class="text-xl">Declaro ser mayor de 18 años.</p>
              </div>
            </div>


            <%= f.actions class: 'enter' do %>
                <%= f.action :submit, :as => :input, button_html: {class: 'button'} %>
            <% end %>

          </fieldset>
      <% end %>
    </div>
  </div>
</div>
