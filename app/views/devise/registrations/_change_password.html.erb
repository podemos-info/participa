<div class="row">
  <%= content_tag(:h2, t("podemos.user.change_password")) %>
  <%= semantic_form_for(resource, as: resource_name, url: registration_path(resource_name)+"#change-password", html: {method: :put}) do |f| %>
      <fieldset>
        <legend class="invisible">
          <span>Recuperar contrase√±a</span>
        </legend>

        <div class="inputlabel-box">
          <% if resource.errors.include?(:password) %>
              <%= field_notice_box %>
          <% end %>
          <%= f.input :password,
                      input_html: {autocomplete: "off", class: 'input-m'},
                      hint: t("devise.hints.password") %>
        </div>

        <div class="inputlabel-box">
          <% if resource.errors.include?(:password_confirmation) %>
              <%= field_notice_box %>
          <% end %>
          <%= f.input :password_confirmation, input_html: {class: 'input-m'} %>
        </div>

        <div class="inputlabel-box">
          <% if resource.errors.include?(:password) %>
              <%= field_notice_box %>
          <% end %>
          <%= f.input :current_password,
                      required: true,
                      hint: raw(t("devise.hints.current_password", :link => link_to(t("devise.links.here"), "#recover-password", class: "js-change-tab"))),
                      input_html: {class: 'input-m'} %>
        </div>
        <%= f.actions class: 'enter' do %>
            <%= f.action :submit, label: t("podemos.user.change_password"), button_html: {class: "button"} %>
        <% end %>
      </fieldset>
  <% end %>
</div>
