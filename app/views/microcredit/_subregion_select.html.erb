<div id="js-microcredit_loan-province-wrapper" class="input required form-group">
  <%= label :microcredit_loan, :province, class: "control-label", required: :required do %>
    <%= title %>
    <% if required %><abbr title="<%= t 'microcredit.new_loan.required' %>">*</abbr><% end %>
  <% end %>
  <span class="form-wrapper">
  <% provinces = get_provinces(country) %>
  <% if provinces.length>0 
      first_options = if required
                        "<option></option>"
                      else  
                        "<option></option><option value='-' %s>-- %s --</option>" % [(province=='-'? ' selected="selected"':''),t('microcredit.common.no_province')]
                      end
      %>
      <%= select_tag "microcredit_loan[province]", first_options.html_safe+options_from_collection_for_select(provinces, "code", "name", province), {disabled: disabled, required: required, data: {placeholder: "-- %s --" % t('microcredit.common.choose_province'), allowClear: true} } %>
  <% else %>
    <%= text_field(:microcredit_loan, :province, class: "form-control input-xl") %>
  <% end %>
  </span>
</div>
