<% content_for :title, "Herramientas de participación ciudadana" %>
<%= content_tag(:h2, "Herramientas de participación ciudadana") %>
<div class="box">
  <div class="box-vote">
    <% if !current_user.has_vote_town? %>
      <p><strong>Por favor, indica tu lugar de participación en tu perfil.</strong></p>
    <% end %>
    <h3><strong>Hay <% if @elections.length==1%>una votación<%else%>votaciones<%end%> en curso. ¡Participa!</strong></h3>
    <% if @elections.any? {|el| el.nvotes? } %>
      <p class="sub-h3"><% if @elections.length==1%>La votación utiliza<%else%>Las votaciones utilizan<%end%> el sistema seguro de <a href="https://nvotes.org" target="_blank"><b>nVotes</b></a>.</p>
    <% end %>
    <% @elections.each do |election| %>
      <%= render partial: "election", locals: { election: election } %>
    <% end %>
  </div>
</div>
